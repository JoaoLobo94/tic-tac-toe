<div class="board {{this.tracker.gameVariable}}" {{on "click" this.winner}} {{on "click" this.whichTurn}}>
    <div class="cell {{tracker.grid.[1]}}"  {{on "click" (fn this.played 1)}}></div>
    <div class="cell {{tracker.grid.[2]}}"  {{on "click" (fn this.played 2)}}></div>
    <div class="cell {{tracker.grid.[3]}}"  {{on "click" (fn this.played 3)}}></div>
    <div class="cell {{tracker.grid.[4]}}"  {{on "click" (fn this.played 4)}}></div>
    <div class="cell {{tracker.grid.[5]}}"  {{on "click" (fn this.played 5)}}></div>
    <div class="cell {{tracker.grid.[6]}}"  {{on "click" (fn this.played 6)}}></div>
    <div class="cell {{tracker.grid.[7]}}"  {{on "click" (fn this.played 7)}}></div>
    <div class="cell {{tracker.grid.[8]}}"  {{on "click" (fn this.played 8)}}></div>
    <div class="cell {{tracker.grid.[9]}}"  {{on "click" (fn this.played 9)}}></div>
</div>
<div class="winning-message {{if tracker.xWins 'show'}} {{if tracker.oWins 'show'}} {{if tracker.isDraw 'show'}}" i>
    <div>{{#if tracker.isDraw }}
        It's a Draw!
        {{else if tracker.xWins }}
        X won the game!
        {{else if tracker.oWins}}
        O won the game!
        {{/if}}
    </div>
    <button {{on "click" this.restart}}>Restart</button>
</div>