<div class="layout-row layout-align-center-start flex">
    <div class="layout-row">
        {{#paper-card as |card|}}
        {{#card.title as |title|}}
        {{#title.text as |text|}}
        <div>
            {{#text.headline}}X -    {{this.tracker.xVictory}} ||  {{/text.headline}}
            {{#text.headline}}{{this.tracker.oVictory}} - O {{/text.headline}}
            {{#text.headline}} || Draws - {{this.tracker.draws}}{{/text.headline}}
        </div>
        <div class="md-padding layout-row layout-align-center-start flex">
            {{#text.headline}}Number of moves left {{this.tracker.count}}{{/text.headline}}
        </div>
        {{/title.text}}
        {{/card.title}}
        {{/paper-card}}
    </div>
</div>